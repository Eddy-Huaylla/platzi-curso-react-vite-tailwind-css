{
  "name": "platzi-curso-react-vite-tailwind-css",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint src --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.11.2"
  },
  "devDependencies": {
    "@types/react": "^18.0.37",
    "@types/react-dom": "^18.0.11",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.14",
    "postcss": "^8.4.24",
    "standard": "^17.1.0",
    "tailwindcss": "^3.3.2",
    "vite": "^4.3.9"
  },
  "eslintConfig": {
    "extends": "./node_modules/standard/eslintrc.json",
    "rules": {
      "space-in-parens": [
        "error",
        "always"
      ],
      "no-tabs": [
        "error",
        {
          "allowIndentationTabs": true
        }
      ],
      "indent": [
        "error",
        "tab",
        {
          "FunctionDeclaration": {
            "body": 1
          },
          "offsetTernaryExpressions": false
        }
      ],
      "react/jsx-indent": [
        "error",
        "tab"
      ],
      "react/jsx-indent-props": [
        "error",
        "tab"
      ],
      "react/jsx-curly-spacing": [
        1,
        {
          "when": "always",
          "spacing": {
            "objectLiterals": "never"
          }
        }
      ],
      "semi": [
        "error",
        "always"
      ],
	  "template-curly-spacing" : [
		"error",
		"always"
	  ]
    }
  }
}
